import 'dart:io';

int Series(int n) {
  int i, sum = 0;

  for (i = 1; i <= n; i++) {
    sum = sum + i;
  }
  print("");
  print("$sum");
  return n;
}

main() {
  stdout.write("Terminal number for series: ");
  int Tnum = int.tryParse(stdin.readLineSync()!) ?? 1;

  print("");
  print("Sum Of Series  :");
  Series(Tnum);
  print("");
}
